<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3.6">
    <!--User data -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/fab_margin_4"
        android:layout_weight="0.65"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_included"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fab_margin_4"
            android:textSize="@dimen/adv_search_header_tv_16"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>
        <TextView
            android:id="@+id/tv_numResults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fab_margin_4"
            android:textSize="@dimen/adv_search_header_tv_16"
            android:text=""/>

    </LinearLayout>
    <!---->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/fab_margin_4"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:padding="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fab_margin_8"
            android:background="@color/colorPrimaryDark"
            android:text="Active"
            android:textSize="15sp"
            android:textColor="@color/white" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/presumptive_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:dividerHeight="4px"/>


            <TextView
                android:id="@+id/tv_presumptive_no_results"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="No Results"
                android:textSize="@dimen/fab_margin_16"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/fab_margin_4"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fab_margin_8"
            android:background="@color/colorPrimaryDark"
            android:ellipsize="marquee"
            android:padding="3dp"
            android:text="Positive"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/pos_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_pos_no_results"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="No Results"
            android:textSize="@dimen/fab_margin_16"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/fab_margin_4"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:padding="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fab_margin_8"
            android:background="@color/colorPrimaryDark"
            android:text="In-Treatment"
            android:textSize="15sp"
            android:textColor="@color/white" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/treatment_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_intreatment_no_results"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="No Results"
            android:textSize="@dimen/fab_margin_16"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>